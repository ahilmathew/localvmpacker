{
    "description": "Packer template for building vagrant box of ubuntu bionic 18 desktop",
    "variables": {
        "iso_url": "file:///home/ahilmathew/repos/localvm/ubuntu-22.04.3-desktop-amd64.iso",
        "iso_checksum": "sha256:a435f6f393dda581172490eda9f683c32e495158a780b5a1de422ee77d98e909"
    },
    "builders": [{
        "type": "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",

        "output_directory": "output",
        "export_opts": [
            "--manifest",
            "--vsys", "0",
            "--description", "{{user `vm_description`}}",
            "--version", "{{user `vm_version`}}"
        ],
        "http_directory": "http",
        "http_port_min": 8000,
        "http_port_max": 9000,
        "iso_urls": [
            "{{ user `iso_url` }}",
            "http://releases.ubuntu.com/bionic/ubuntu-18.04.4-desktop-amd64.iso"
        ],
        "iso_checksum": "{{ user `iso_checksum` }}",
        "ssh_username": "ubuntu",
        "ssh_password": "ubuntu",
        "ssh_port": 22,
        "ssh_wait_timeout": "10000s",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "2048"]
        ],
        "vm_name": "ubuntu_22_04_{{ uuid }}",
        "boot_wait": "6s",
        "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
        "boot_command": [
            "c<wait>",
            "set gfxpayload=keep",
            "<enter>",
            "ubiquity/reboot=true <enter>",
            "linux /casper/vmlinuz ds=\"nocloud-net;seedfrom=http://{{.HTTPIP}}:{{.HTTPPort}}/\" cloud-config-url=\"http://{{ .HTTPIP }}:{{ .HTTPPort }}/user-data\" autoinstall  ---",
            "<enter><wait>",
            "initrd /casper/initrd",
            "<enter><wait>",
            "boot",
            "<enter>"
          ]          
    }],
    "provisioners": [
        {
          "type": "shell",
          "inline": ["echo 'Provisioning tasks here...'"]
        }
      ]
}